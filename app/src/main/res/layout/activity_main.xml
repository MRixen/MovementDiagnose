<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/ID_1_header"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="Sensor ID 1"/>

    <TextView
        android:id="@+id/ID_1_x_value"
        android:gravity="left"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_1_header"
        android:text="@string/x_value"/>

    <TextView
        android:id="@+id/ID_1_y_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_1_x_value"
        android:gravity="left"
        android:text="@string/y_value"/>

    <TextView
        android:id="@+id/ID_1_z_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_1_y_value"
        android:gravity="left"
        android:text="@string/z_value"/>



    <TextView
        android:id="@+id/ID_2_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="Sensor ID 2"/>

    <TextView
        android:id="@+id/ID_2_x_value"
        android:layout_alignParentRight="true"
        android:layout_width="70dp"
        android:layout_below="@id/ID_2_header"
        android:background="@color/GreyLight"
        android:layout_height="wrap_content"
        android:text="@string/x_value"/>

    <TextView
        android:id="@+id/ID_2_y_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ID_2_x_value"
        android:text="@string/y_value"/>

    <TextView
        android:id="@+id/ID_2_z_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_2_y_value"
        android:layout_alignParentRight="true"
        android:text="@string/z_value"/>

    <TextView
        android:id="@+id/ID_3_header"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/ID_1_z_value"
        android:layout_marginTop="20dp"
        android:text="Sensor ID 3"/>

    <TextView
        android:id="@+id/ID_3_x_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_3_header"
        android:text="@string/x_value"/>

    <TextView
        android:id="@+id/ID_3_y_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_3_x_value"
        android:gravity="left"
        android:text="@string/y_value"/>

    <TextView
        android:id="@+id/ID_3_z_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_3_y_value"
        android:gravity="left"
        android:text="@string/z_value"/>





    <TextView
        android:id="@+id/ID_4_header"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ID_2_z_value"
        android:layout_alignParentRight="true"
        android:text="Sensor ID 4"/>

    <TextView
        android:id="@+id/ID_4_x_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_4_header"
        android:layout_alignParentRight="true"
        android:text="@string/x_value"/>

    <TextView
        android:id="@+id/ID_4_y_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_4_x_value"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:text="@string/y_value"/>

    <TextView
        android:id="@+id/ID_4_z_value"
        android:layout_width="70dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/GreyLight"
        android:layout_below="@id/ID_4_y_value"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:text="@string/z_value"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:text="Send"
        android:onClick="onSendButtonClicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_above="@id/sendButton"
        android:background="@color/GreyLight"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:contentDescription="Test"
        android:text="Start"
        android:onClick="onStartButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
